.menu Menu
%ul
  %li
    %a(href="books")
      Books List
  %li
    %a(href="users")
      Users List


.list Book Comments
%form.post(action='comments' method='post')
  %select(name='user')
    - users.each
      %option(value='${it.id}')= it.name

  %select(name='book')

  %input(name='content' type='text')
  %input(type='submit' value='Add')

