<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fits.sample</groupId>
    <artifactId>sample2</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
     <properties>
        <felix.outdir>${project.build.OutputDirectory}/../felix/</felix.outdir>
    </properties>
    <name>Integration Application - sample2</name>
    <profiles>
        <profile>
            <id>dist</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <stripVersion>true</stripVersion>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.apache.felix</groupId>
                                            <artifactId>org.apache.felix.main</artifactId>
                                            <version>1.0.3</version>
                                            <outputDirectory>${felix.outdir}/bin</outputDirectory>
                                            <destFileName>felix.jar</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.felix</groupId>
                                            <artifactId>org.apache.felix.shell</artifactId>
                                            <version>1.0.0</version>
                                            <type>jar</type>
                                            <outputDirectory>${felix.outdir}/bundle</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.felix</groupId>
                                            <artifactId>org.apache.felix.shell.tui</artifactId>
                                            <version>1.0.0</version>
                                            <type>jar</type>
                                            <outputDirectory>${felix.outdir}/bundle</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.apache.felix</groupId>
                                            <artifactId>org.apache.felix.eventadmin</artifactId>
                                            <version>1.0.0</version>
                                            <type>jar</type>
                                            <outputDirectory>${felix.outdir}/bundle</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish</groupId>
                                            <artifactId>javax.activation</artifactId>
                                            <version>10.0-SNAPSHOT</version>
                                            <type>jar</type>
                                            <outputDirectory>${felix.outdir}/bundle</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>open-esb.fuji</groupId>
                                            <artifactId>framework</artifactId>
                                            <version>1.0-SNAPSHOT</version>
                                            <type>jar</type>
                                            <outputDirectory>${felix.outdir}/bundle</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <build>   
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main</directory>
                <excludes>
                <exclude>resources</exclude>
                <exclude>java</exclude>
                <exclude>config</exclude>
                <exclude>ifl</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/ifl</directory>
                <includes>
                    <include>*.ifl</include>
                </includes>
                <targetPath>META-INF</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>open-esb.fuji</groupId>
                <artifactId>maven-fuji-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>package-app</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
          <id>fuji-plugins</id>
          <name>Fuji Repository</name>
          <url>http://download.java.net/maven</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>gf.java.net</id>
          <name>java.net Maven Repository</name>
          <url>http://download.java.net/maven/glassfish</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>  
      </repositories>
    <pluginRepositories>
        <pluginRepository>
          <id>fuji-plugins</id>
          <name>Fuji Plugin Snapshots</name>
          <url>http://download.java.net/maven</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    <dependencies>
        <dependency>
            <groupId>open-esb.fuji</groupId>
            <artifactId>framework</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        </dependencies>
</project>
