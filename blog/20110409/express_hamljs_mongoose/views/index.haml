
.menu Menu
%ul
  %li
    %a{ href: "/books" } Books List
  %li
    %a{ href: "/users" } Users List

.list Book Comments
%form.post{ action: action, method: 'post' }
  %select{ name: 'user_id' }
    - each u in users
      %option{ value: u._id }
        = u.name
  
  %select{ name: 'book_id' }
    - each b in books
      %option{ value: b._id }
        = b.title
  
  %input{ name: 'content', type: 'text' }
  %input{ type: 'submit', value: 'Add' }

- each b in books
  %ul
    %li= b.title
    %ul
      - each c in b.comments
        %li= c.content + ' : ' + c.user.name + " , " + c.created_date
